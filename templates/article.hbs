{{> header }}
<div class="container-fluid article">
	<div class="row">
		{{> sidebar }}
		<section class="col-md-8 col-sm-12 col-md-offset-4 main-content">
			<h1>{{ title }}</h1>
			<hr />
			{{{ body }}}

			<div class="meta">
				<span> {{ author }} </span> in <span> <a href="/categories#{{hashify category}}">{{ category }}</a> </span> {{#if date}} - <span> {{ formatDate date day="numeric" month="short" year="numeric" }} </span> {{/if}}
			</div>

			<button data-show-comments style="display: none">Show Comments</button>
			<div id="disqus_thread"></div>
			<script>
				//https://hearthstonegg.disqus.com/admin/settings/universalcode/
				var disqus_config = function () {
					this.page.url = 'http://www.hearthstone.gg/{{ path }}';
					this.page.identifier = '{{ path }}';
				};
			</script>
			<noscript>
				Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript" rel="nofollow">comments powered by Disqus.</a>
			</noscript>
		</section>
	</div>
</div>
<div class="container-fluid">
	<div class="row">
		<section class="col-md-8 col-sm-12 col-md-offset-4 social-buttons">
			<span>share</span>
			<span class="share reddit">
				<a href="http://reddit.com/submit?url=http://www.hearthstone.gg/{{ path }}&title={{title}}
" target="_new"><i class="fa fa-2x fa-reddit"></i></a>
			</span>
			<span class="share facebook">
				<a href="http://www.facebook.com/sharer.php?u=http://www.hearthstone.gg/{{ path }}" target="_new"><i class="fa fa-2x fa-facebook"></i></a>
			</span>
			<span class="share twitter">
				<a href="https://twitter.com/share?url=http://www.hearthstone.gg/{{ path }}&text={{title}}&via=hearthstone_gg
" target="_new"><i class="fa fa-2x fa-twitter"></i></a>
			</span>
			<span class="share googleplus">
				<a href="https://plus.google.com/share?url=http://www.hearthstone.gg/{{ path }}
" target="_new"><i class="fa fa-2x fa-google-plus"></i></a>
			</span>
			<span class="share email">
				<a href="mailto:?subject=Hearthstone.gg Article - {{title}}&body=Article on Hearthstone.gg: {{title}} - http://www.hearthstone.gg/{{ path }}"><i class="fa fa-2x fa-envelope"></i></a>
			</span>
		</section>
	</div>
</div>
{{> footer }}