{{> header }}
<div class="container-fluid index">
	<div class="row">
		{{> sidebar }}
		<section class="col-md-8 col-sm-12 col-md-offset-4 main-content">
			{{{ doc.fileInfo.content }}}
			<hr />
			<ul class="article-list">
			{{#each allDocs}}
				{{#if isArticle}}
					<li>
						<a href="{{ this.path }}" />
							{{ this.title }}
						</a>
						<p>
							{{ description }}
						</p>
						<div class="meta">
							<span> {{ author }} </span> in <span> <a href="/categories#{{hashify category}}">
							{{>icons}}
							{{ category }}</a> </span> - <span> {{ formatDate date day="numeric" month="short" year="numeric" }} </span>
						</div>
						<hr class="stub" />
					</li>
				{{/if}}
			{{/each}}
			</ul>
		</section>
	</div>
</div>
{{> footer }}